<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lhx.scrollbardemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TwoSameTopBarActivity" />
        <activity android:name=".activity.ListViewAddHeaderActivity" />
        <activity android:name=".activity.OneTopBarActivity" />
        <activity android:name=".activity.MaterialDesignTopBarActivity" />
        <activity android:name=".activity.DecorationActivity" />
        <activity android:name=".activity.GroupAndDecorationActivity" />
    </application>

</manifest>